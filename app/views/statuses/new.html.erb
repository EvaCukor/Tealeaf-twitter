<%= render 'shared/header', header: "Create a new status" %>
<%= render 'shared/errors', obj: @status %>

<%= form_for @status, html: {class: "form-horizontal", role: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :body, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_area :body, class: "form-control", rows: "3" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Create status", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>